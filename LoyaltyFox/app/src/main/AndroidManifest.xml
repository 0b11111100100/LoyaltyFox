<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.hackathon.loyaltyfox">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".BackUp.BackUpActivity"></activity>

        <service
            android:name=".ButtonDetect.ButtonDetectService"
            android:enabled="true"
            android:exported="true" />

        <activity android:name=".CallBack.CallBackDetailActivity" />
        <activity android:name=".CallBack.CallBackListActivity" />
        <activity android:name=".ShoppingList.ShoppingListDetailActivity" />
        <activity android:name=".ShoppingList.ShoppingListActivity" />
        <activity android:name=".Scanner.ScannerActivity" />
        <activity android:name=".LoyaltyCardList.LoyaltyCardActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Authorization.SignUpActivity" />
        <activity android:name=".Authorization.LogInActivity" />

        <activity android:name=".Authorization.FingerPrintActivity" />

    </application>

</manifest>